<?xml version="1.0" encoding="UTF-8"?>
<sharedtheme>

    <!-- YUI Grid based TightBlog theme -->

    <id>fauxcoly</id>
    <name>Fauxcoly</name>
    <description>Theme built on the Yahoo! User Interface (YUI) library.</description>
    <author>Dave Johnson</author>

    <!-- theme preview image -->
    <previewImagePath>images/fauxcoly-preview.png</previewImagePath>

    <!-- templates -->
    <template role="weblog">
        <name>Weblog</name>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>weblog.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="permalink">
        <name>Entry</name>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>entry.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="tagsIndex">
        <name>TagsIndex</name>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>tags_index.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="search">
        <name>Search</name>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>search.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="customInternal">
        <name>_day</name>
        <description>One day's worth of entries</description>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>day.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="customExternal">
        <name>Archives</name>
        <description>Calendar browser and links to latest entries</description>
        <relativePath>archives</relativePath>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>archives.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="customInternal">
        <name>standard_head</name>
        <description>Contents of HTML head</description>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>std_head.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="customInternal">
        <name>standard_header</name>
        <description>Displayed in header of each page</description>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>std_header.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="customInternal">
        <name>standard_footer</name>
        <description>For footer of each page</description>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>std_footer.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="stylesheet">
        <name>style.css</name>
        <description>Base stylesheet for theme</description>
        <relativePath>style.css</relativePath>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>style_css.vm</contentsFile>
            </rendition>
        </renditions>
    </template>

    <template role="javascript">
        <name>searchhi.js</name>
        <description>3rd party script for search term highlighting</description>
        <relativePath>searchhi.js</relativePath>
        <renditions>
            <rendition>
                <templateLanguage>velocity</templateLanguage>
                <contentsFile>searchhi.js</contentsFile>
            </rendition>
        </renditions>
    </template>

</sharedtheme>
