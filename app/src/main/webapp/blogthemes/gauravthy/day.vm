<div th:class="${model.permalink}? 'daybox'">
    <div th:each="entry : ${entries}" class="entryBox" th:id="${utils.encode(entry.anchor)}">
        <h2 class="entryTitle">
            <a th:remove="${model.permalink}? 'tag' : 'none'" th:href="${url.entry(entry)}" th:utext="${entry.title}">xxx</a>
        </h2>

        <p class="lead">by <span style="text-transform: capitalize;" th:utext="${entry.creator.screenName}">xxx</span></p>

        <hr>
        <p><i class="icon-time"></i> <span th:utext="${'Posted on ' + utils.formatDate(day, utils.msg('macro.weblog.datepattern'))
            + ' at ' + utils.formatDate(entry.pubTime, utils.msg('macro.weblog.timepattern')) + ' in '}"</span>
            <span class="category" th:utext="${entry.category.name}">xxx</span> </p>
        <hr>

        <div class="entryContent">
            <th:block th:switch="${model.permalink}">
                <p th:case="${true}">$model.getTransformedText($entry)</p>
            #else
                #if($utils.isNotEmpty($entry.summary))
                    <p>$entry.summary</p>
                    <a class="btn btn-primary" href="$url.entry($entry)">Read More <i class="icon-angle-right"></i></a>
                #else
                    <p>$model.getTransformedText($entry)</p>
                #end
            </th:block>
        </div>

        <p class="entryInfo" style="clear: right">
            #set($commentCount = $entry.commentCount)
            #if($model.canSubmitNewComments($entry) || $commentCount > 0)
                #set($link = "$url.comments($entry)" )
                <a href="$link" class="commentslink">$utils.msg("macro.weblog.comments") [$commentCount]</a>
            #end

            #if ($model.isUserBlogPublisher($entry.weblog))
                &nbsp;|&nbsp;
                <a href="$url.editEntry($entry.anchor)">
                    $utils.msg("generic.edit")</a>
            #end
        </p>

        #if ($entry.tags && $entry.tags.size() > 0)
            <p class="entryInfo" style="clear: right">
                Tags:
                #foreach($tag in $entry.tags)
                    <a class="tagLink" href="$url.tag($tag.name)">$tag.name</a>
                #end
            </p>
        #end
    </div>
    <hr>
</div>
