<?xml version="1.0" encoding="UTF-8"?>
<sharedtheme>

    <!-- Bootstrap based TightBlog theme -->

    <id>gauravthy</id>
    <name>Gaurav</name>
    <description>Responsive Bootstrap-based theme originally by Gaurav Saini.</description>
    <author>Gaurav Saini</author>

    <!-- theme preview image -->
    <previewImagePath>images/theme-gaurav.png</previewImagePath>

    <!-- templates -->
    <template role="weblog">
        <name>Weblog</name>
        <contentsFile>weblog.html</contentsFile>
        <parser>thymeleaf</parser>
    </template>

    <template role="permalink">
        <name>Permalink</name>
        <contentsFile>permalink.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="searchResults">
        <name>SearchResults</name>
        <contentsFile>searchResults.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customInternal">
        <name>_day</name>
        <description>One day's worth of entries</description>
        <parser>velocity</parser>
        <contentsFile>day.vm</contentsFile>
    </template>

    <template role="customExternal">
        <name>Archives</name>
        <description>Calendar browser and links to latest entries</description>
        <relativePath>archives</relativePath>
        <contentsFile>archives.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customInternal">
        <name>common_html_head</name>
        <description>Common contents of HTML head section</description>
        <contentsFile>common_html_head.html</contentsFile>
        <parser>thymeleaf</parser>
    </template>

    <template role="customInternal">
        <name>standard_header</name>
        <description>Displayed in header of each page</description>
        <contentsFile>std_header.html</contentsFile>
        <parser>thymeleaf</parser>
    </template>

    <template role="customInternal">
        <name>standard_footer</name>
        <description>For footer of each page</description>
        <contentsFile>std_footer.html</contentsFile>
        <parser>thymeleaf</parser>
    </template>

</sharedtheme>
