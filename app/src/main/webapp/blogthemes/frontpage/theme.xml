<?xml version="1.0" encoding="UTF-8"?>
<sharedtheme>

    <id>frontpage</id>
    <name>Frontpage</name>
    <description>Not a standard blog template; meant only as a front page accumulator of all blogs hosted by this
        server.
    </description>
    <author>Dave Johnson</author>
    <siteWide>true</siteWide>

    <!-- theme preview image -->
    <previewImagePath>sm-theme-frontpage.png</previewImagePath>

    <!-- templates -->
    <template role="weblog">
        <name>Weblog</name>
        <contentsFile>weblog.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customInternal">
        <name>_blogdirectory</name>
        <contentsFile>_blogdirectory.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customInternal">
        <name>_blogprofile</name>
        <contentsFile>_blogprofile.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="stylesheet">
        <name>_css</name>
        <contentsFile>_css.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customInternal">
        <name>_entry</name>
        <contentsFile>_entry.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customInternal">
        <name>_footer</name>
        <contentsFile>_footer.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customInternal">
        <name>_header</name>
        <contentsFile>_header.vm</contentsFile>
        <parser>velocity</parser>
    </template>

    <template role="customExternal">
        <name>directory</name>
        <description>weblog directory</description>
        <relativePath>directory</relativePath>
        <contentsFile>directory.vm</contentsFile>
        <parser>velocity</parser>
    </template>

</sharedtheme>
